<tool name="boost" version="1.57.0-ikhhed">
  <info url="http://www.boost.org"/>
  <lib name="boost_thread"/>
  <lib name="boost_signals"/>
  <lib name="boost_date_time"/>
  <client>
    <environment name="BOOST_BASE" default="/cvmfs/cms.cern.ch/slc6_amd64_gcc530/external/boost/1.57.0-ikhhed"/>
